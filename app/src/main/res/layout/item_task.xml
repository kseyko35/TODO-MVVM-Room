<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkBox_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Task will be seen hereTask will be seen hereTask will be seen hereTask will be seen hereTask will be seen here"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/imageView_priority"
        android:layout_alignTop="@+id/checkBox_completed"
        android:layout_alignBottom="@+id/checkBox_completed"
        android:layout_toEndOf="@id/checkBox_completed"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageView_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_priority"
        android:layout_centerVertical="true"
        />
</RelativeLayout>